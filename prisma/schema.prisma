generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

model User {
  id         String     @id @default(cuid())
  username   String     @unique
  firstName  String
  lastName   String
  profilePic String?
  r_number   String
  major      String
  minor      String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime?  @updatedAt
  address    String?
  orgs       Org[]      @relation("OrgToUser")
  activities Activity[] @relation("UserToActivity")
}

model Activity {
  id          String    @id @default(cuid())
  name        String
  description String
  startTime   DateTime
  endTime     DateTime
  location    String
  organizer   String
  coverImg    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  attendees   User[]    @relation("UserToActivity")
}

model Org {
  id          String    @id @default(cuid())
  name        String
  description String?
  color       String?
  orgPicture  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  category    String?
  officers    Json[]    @default([])
  members     User[]    @relation("OrgToUser")
}
